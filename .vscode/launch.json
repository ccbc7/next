{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch", 
      "name": "Next.js: client-side", 
      "url": "http://localhost:3000", 
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMapPathOverrides": {
        "webpack://_N_E/*": "${workspaceFolder}/frontend/*"
      }
    },
    {
      "type": "node", 
      "request": "attach", 
      "name": "Next.js: server-side",
      "port": 9229, 
      "address": "localhost", 
      "localRoot": "${workspaceFolder}/frontend",
      "remoteRoot": "/app"
    },
  ],
  "compounds": [
    {
      "name": "Next.js: debug",
      "configurations": [
        "Next.js: client-side",
        "Next.js: server-side"
      ]
    }
  ]
}
